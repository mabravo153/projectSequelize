extends ../layout/index
block contenido
    main.container.mt-5
        h1.text-center.mb-5 #{pagina}

        .row
            .col-md-12
                blockquote.text-center Lee sobre nuestos clientes y sus experiencias 
                .row.testimoniales
                    each testimonio in testimoniales
                        .col-md-6.col-lg-4.mb-4
                            .card
                                .card-body 
                                    blockquote.blockquote 
                                        p.mb-0
                                           | #{testimonio.mensaje}
                                        footer.blockquote-footer
                                            | #{testimonio.nombre_usuario}



            .col-md-12
                h2.text-center Agrega un testimonial
                if(errores)
                    each error in errores
                        .alert.alert-danger.text-center=error.mensaje

                .row.justify-content-center
                    .col-md-8
                        form(action="/testimoniales", method="POST")
                            .form-group
                                label(for="name") Nombre
                                input(type="text", name="nombre", placeholder="Tu nombre", id="name", 
                                class="form-control", value=nombre )
                            .form-group
                                label(for="email") Correo Electronico
                                input(type="email", name="correo", placeholder="Tu correo", id="email", 
                                class="form-control", value=correo)
                            .form-group
                                label(for="msg") Mensaje
                                textarea#msg(name="mensaje", rows="3", placeholder="Tu mensaje", class="form-control")=mensaje
                            input.btn.btn-success.btn-block(type="submit", value="Enviar") 
